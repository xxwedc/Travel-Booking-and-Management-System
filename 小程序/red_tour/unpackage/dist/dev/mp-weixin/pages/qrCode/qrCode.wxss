
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    height: 100vh;
    padding: 0;
}
.header {
    width: 100%;
    text-align: center;
    padding: 20rpx 0;
}
.header-text {
    font-size: 40rpx;
    font-weight: bold;
}
.camera {
    width: 90%;
    /* 调整宽度以留出边距 */
    height: 40%;
    /* 缩小高度 */
    margin-top: 20rpx;
    border-radius: 16rpx;
    /* 更大的圆角 */
    overflow: hidden;
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
    /* 更柔和的阴影 */
    border: 2rpx solid #ddd;
    /* 添加边框 */
}
.hidden-canvas {
    width: 300px;
    height: 300px;
    position: absolute;
    top: -9999px;
    /* 隐藏 canvas */
}
.footer {
    width: 90%;
    margin-top: 20rpx;
    /* 距离摄像头区域 20px */
    padding: 30rpx;
    background-color: #ffffff;
    /* 白色背景 */
    border-radius: 16rpx;
    /* 圆角 */
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    /* 柔和的阴影 */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.footer-text {
    font-size: 30rpx;
    color: #666;
    margin-bottom: 15rpx;
}
.result-text {
    font-size: 34rpx;
    color: #007aff;
    font-weight: bold;
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
    text-align: center;
    word-wrap: break-word;
    max-width: 100%;
}
.verify-button {
    margin-top: 20rpx;
    padding: 20rpx 40rpx;
    background-color: #007aff;
    color: #fff;
    font-size: 30rpx;
    border-radius: 10rpx;
    text-align: center;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}
