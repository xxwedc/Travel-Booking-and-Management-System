
.about-container {
	padding: 20px;
	background-color: #f5f7fa;
	min-height: 100vh;
}
.header {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 30px;
	padding: 30px 0;
	background: linear-gradient(to bottom, rgba(208, 33, 41, 0.05), transparent);
}
.logo {
	width: 300px;
	height: 90px;
	margin-bottom: 25px;
	object-fit: contain;
}
.subtitle {
	font-size: 16px;
	color: #666;
	margin-top: 0;
}
.content {
	background-color: #fff;
	border-radius: 8px;
	padding: 20px;
	box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}
.info-section {
	margin-bottom: 25px;
	padding-bottom: 20px;
	border-bottom: 1px solid #eee;
}
.info-section:last-child {
	border-bottom: none;
	margin-bottom: 0;
	padding-bottom: 0;
}
.section-title {
	font-size: 18px;
	font-weight: bold;
	color: #333;
	margin-bottom: 15px;
	display: block;
	position: relative;
	padding-left: 12px;
}
.section-title::before {
	content: '';
	position: absolute;
	left: 0;
	top: 50%;
	transform: translateY(-50%);
	width: 4px;
	height: 16px;
	background-color: #d02129;
	border-radius: 2px;
}
.text {
	font-size: 14px;
	color: #666;
	line-height: 1.8;
	display: block;
}
.feature-list {
	padding-left: 10px;
}
.feature-item {
	display: flex;
	align-items: flex-start;
	margin-bottom: 10px;
}
.feature-dot {
	color: #d02129;
	margin-right: 8px;
	font-weight: bold;
}
.contact-list {
	padding: 0 10px;
}
.contact-item {
	display: flex;
	margin-bottom: 10px;
}
.label {
	color: #333;
	font-weight: 500;
	min-width: 90px;
}
.footer {
	text-align: center;
	padding: 20px 0;
	margin-top: 30px;
}
.copyright, .icp {
	font-size: 12px;
	color: #999;
}
.icp {
	margin-top: 5px;
	display: block;
}
.video-container {
	position: relative;
	width: 100%;
	border-radius: 8px;
	overflow: hidden;
	background-color: #000;
	margin: 10px 0;
}
.intro-video {
	width: 100%;
	height: 200px;
}
.volume-control {
	position: absolute;
	right: 10px;
	top: 10px;
	background: rgba(0, 0, 0, 0.5);
	padding: 5px 10px;
	border-radius: 15px;
	z-index: 1;
	cursor: pointer;
	display: flex;
	align-items: center;
	justify-content: center;
	min-width: 64px;
	height: 24px;
}
.volume-control:hover {
	background: rgba(0, 0, 0, 0.7);
}
.volume-text {
	color: #fff;
	font-size: 12px;
	line-height: 1;
}
