/* // 容器样式 */
.container.data-v-2f1ef635 {
 	display: flex;
	width: 100%;
	height: 100%;
 	flex-direction: column;
}
 /* // 头部样式 */
.header.data-v-2f1ef635 {
 	background-color: green;
	background-image: url("http://localhost:8888/pic/banner.png");
	border-bottom-left-radius: 20px;
 	padding: 23% 10% 8% 5%;
 	display: flex;
 	align-items: center;
}
 /* // 头像样式 */
.avatar.data-v-2f1ef635 {
 	width: 50px;
 	height: 50px;
 	border-radius: 50%;
 	background-color: white;
 	margin-right: 20px;
	overflow: hidden;
}
 /* // 欢迎信息样式 */
.welcome.data-v-2f1ef635 {
 	display: flex;
 	flex-direction: column;
}
 /* // 菜单样式 */
.menu.data-v-2f1ef635 {
 	margin-top: 20px;
}
 /* // 菜单项样式 */
.menu-item.data-v-2f1ef635 {
 	display: flex;
 	align-items: center;
 	padding: 15px;
 	border-bottom: 1px solid #eee;
}
 /* // 箭头样式 */
.arrow.data-v-2f1ef635 {
 	margin-left: auto;
 	width: 10px;
 	height: 10px;
 	border-top: 2px solid black;
 	border-right: 2px solid black;
 	transform: rotate(45deg);
}
.icon.data-v-2f1ef635{
	width: 20px;
	height: 20px;
	margin-right: 10px;
}
 /* 统一所有图标颜色 */
.menu-item .icon.data-v-2f1ef635 {
    width: 24px;
    height: 24px;
    /* 使用 filter 属性来设置所有图标颜色为红色 (#FF0036) */
    filter: invert(27%) sepia(91%) saturate(7480%) hue-rotate(351deg) brightness(97%) contrast(120%);
}
